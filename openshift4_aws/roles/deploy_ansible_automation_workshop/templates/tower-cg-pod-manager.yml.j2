apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: pod-manager-{{ item }}
  namespace: edge-{{ item }}
rules:
  - verbs:
      - get
      - list
      - watch
      - create
      - update
      - patch
      - delete
    apiGroups:
      - ''
    resources:
      - pods
  - verbs:
      - create
    apiGroups:
      - ''
    resources:
      - pods/exec
